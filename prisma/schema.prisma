generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  EDITOR
  USER
}

enum MovieStatus {
  ONGOING
  COMPLETED
}

model User {
  id            String    @id @default(uuid())
  username      String    @unique // Đăng nhập bằng username hoặc email (bắt buộc)
  email         String?   @unique // Optional
  emailVerified DateTime? // Chỉ set khi user đã liên kết mail và verify
  name          String?
  password      String
  role          Role      @default(USER)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  watchHistory WatchHistory[]
  favorites    Favorite[]
}

model WatchHistory {
  id             String   @id @default(uuid())
  userId         String
  movieId        Int
  episodeId      Int?     // Tập đang xem
  progressSeconds Int     @default(0)
  lastWatchedAt  DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
}

model Favorite {
  id        String   @id @default(uuid())
  userId    String
  movieId   Int
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  movie Movie @relation(fields: [movieId], references: [id], onDelete: Cascade)

  @@unique([userId, movieId])
  @@index([userId])
}



model Movie {
  id            Int     @id @default(autoincrement())
  slug          String  @unique
  title         String
  originalTitle String?
  description   String?
  poster        String?
  backdrop      String?

  year   Int?
  status MovieStatus @default(ONGOING)
  views  Int         @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  genres        Genre[]
  tags          Tag[]
  episodes      Episode[]
  watchHistory  WatchHistory[]
  favorites     Favorite[]

  @@index([slug])
}

model Episode {
  id      Int @id @default(autoincrement())
  movieId Int

  name          String 
  episodeNumber Int
  slug          String?

  createdAt DateTime @default(now())

  movie   Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  servers Server[]

  @@unique([movieId, episodeNumber])
  @@index([movieId])
}

model Server {
  id        Int @id @default(autoincrement())
  episodeId Int

  name     String // VD: MixDrop, StreamTape, Okru
  embedUrl String // iframe src
  priority Int     @default(0) // server chính load trước
  isActive Boolean @default(true)

  createdAt DateTime @default(now())

  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([episodeId])
}

model Genre {
  id    Int    @id @default(autoincrement())
  slug  String @unique
  name  String
  order Int    @default(0)

  movies Movie[]

  @@index([slug])
}

model Tag {
  id    Int    @id @default(autoincrement())
  slug  String @unique // tag
  name  String
  order Int    @default(0)

  movies Movie[]

  @@index([slug])
}