generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  ADMIN
  EDITOR
  USER
}

enum MovieStatus {
  ONGOING
  COMPLETED
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Movie {
  id            Int     @id @default(autoincrement())
  slug          String  @unique
  title         String
  originalTitle String?
  description   String?
  poster        String?
  backdrop      String?

  year   Int?
  status MovieStatus @default(ONGOING)
  views  Int         @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  genres   Genre[]
  tags     Tag[]
  episodes Episode[]

  @@index([slug])
}

model Episode {
  id      Int @id @default(autoincrement())
  movieId Int

  name          String 
  episodeNumber Int
  slug          String?

  createdAt DateTime @default(now())

  movie   Movie    @relation(fields: [movieId], references: [id], onDelete: Cascade)
  servers Server[]

  @@unique([movieId, episodeNumber])
  @@index([movieId])
}

model Server {
  id        Int @id @default(autoincrement())
  episodeId Int

  name     String // VD: MixDrop, StreamTape, Okru
  embedUrl String // iframe src
  priority Int     @default(0) // server chính load trước
  isActive Boolean @default(true)

  createdAt DateTime @default(now())

  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@index([episodeId])
}

model Genre {
  id    Int    @id @default(autoincrement())
  slug  String @unique
  name  String
  order Int    @default(0)

  movies Movie[]

  @@index([slug])
}

model Tag {
  id    Int    @id @default(autoincrement())
  slug  String @unique // tag
  name  String
  order Int    @default(0)

  movies Movie[]

  @@index([slug])
}